{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": ["DEBUG=1"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": ["$gcc"]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make",
            "args": ["clean"],
            "group": "build"
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "make",
            "args": ["clean", "&&", "make", "DEBUG=1"],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["clean"]
        }
    ]
}
